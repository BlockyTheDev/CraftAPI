<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.games647</groupId>
    <artifactId>craftapi</artifactId>
    <packaging>jar</packaging>

    <name>CraftAPI</name>
    <version>0.1-SNAPSHOT</version>
    <inceptionYear>2018</inceptionYear>

    <url>https://github.com/games647/CraftAPI/</url>
    <description>
        Shared Mojang API implementation for Bukkit, BungeeCord and Sponge plugins since Minecraft version 1.7.10.
    </description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <links>
                        <link>https://docs.oracle.com/javase/9/docs/api</link>
                        <link>https://www.javadoc.io/doc/com.google.code.gson/gson/2.2.4/</link>
                        <!--<link>https://www.javadoc.io/doc/com.google.guava/guava/10.0.1/</link>-->
                    </links>

                    <reportOutputDirectory>apidocs</reportOutputDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!--Warning: This package is at a different position in Minecraft 1.7 -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>10.0.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
    </dependencies>
</project>
